---
import { menuItems } from '../data/data'
---

<!-- ICONO DE HAMBURGUESA========================================= -->
<div
    id="ham"
    class='absolute top-2 left-4 w-[2rem] z-30 block sm:hidden cursor-pointer'
>
    <img
        src='/hamburguesa.svg'
        alt=''
    />
</div>

<!-- ICONO DEL HOME============================================ -->
<div
    id="home"
    class='absolute top-2 left-4 w-[2rem] hidden sm:block z-40 cursor-pointer'
>
    <a href='/inicio'>
        <img
            src='/home.svg'
            alt=''
        />
    </a>
</div>

<!-- LISTA DEL MENU=================================================== -->
<div class='w-full bg-slate-400 fixed leading-[3rem] flex opacity-30
h-[3rem] 
transition-transform
duration-500
-translate-y-full

sm:translate-y-0'>
    <nav class='mx-auto whitespace-nowrap border-2'>
        <ul
            id="desplegable"
            class="flex"
        >
        
            {
                menuItems.map((item) => (
                    <li class='px-[2rem]'>
                        <a href={item.url}>{item.titulo}</a>
                    </li>
                ))
            }
        </ul>
    </nav>
</div>
<style>
    .se-ve{
        display: block;
    }

</style>

<script>
    const boton = document.querySelector('#ham')
    const desplegable = document.querySelector('#desplegable')

    boton.addEventListener( 'click', () => {
        desplegable.classList.replace( 'flex','flex-col')
        desplegable.classList.add( 'duration-500', 'translate-y-0')

