<div class="border-2 flex justify-center py-4 bg-white cabecera">
    <img class="w-[22rem]" src="./logo-aux.svg" alt="">
</div>

<script>
    setTimeout( function(){
        document.querySelector('div').classList.add('animated');
    }, 1000 )
</script>

<style>
    .cabecera{
        opacity: 0;
        transition: opacity 1s ease-in-out;;
    }

    @keyframes fade-in{
        from {
            opacity:0;
        }
        to {
            opacity: 1;
        }
    }
    .cabecera.animated{
        animation: fade-in 1s ease-in-out 1s forwards;
    }
</style>